@model EditTicketModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Ticket Info</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Edit an existing Ticket info</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section>
    <!-- Horizontal Form -->
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" method="post" asp-controller="Ticket" asp-action="Edit" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Destination" class="col-sm-2 col-form-label">Destination</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Destination" id="destination" placeholder="Destination">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Fee" class="col-sm-2 col-form-label">Fee</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" asp-for="Fee" id="fee" placeholder="Fee">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Edit</button>
                    <a asp-controller="Ticket" asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</section>